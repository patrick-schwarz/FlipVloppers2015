<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_marginLeft="@dimen/feed_post_margin"
        android:layout_marginRight="@dimen/feed_post_margin"
        android:layout_marginTop="@dimen/feed_post_margin"
        android:background="@drawable/feed_background_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/feed_post_padding_top_bottom"
        android:paddingTop="@dimen/feed_post_padding_top_bottom" >

        <TextView
            android:id="@+id/contact_lastname_firstname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/feed_post_status_pad_left_right"
            android:paddingRight="@dimen/feed_post_status_pad_left_right"
            android:paddingTop="@dimen/feed_post_status_pad_top" />
    </LinearLayout>

</LinearLayout>